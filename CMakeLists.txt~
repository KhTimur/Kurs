cmake_minimum_required(VERSION 3.2)
set(CMAKE_CXX_STANDARD 11)
set(CMAKE_CXX_STANDARD_REQUIRED ON)
project(Kurss)
set(SOUR main)
set(SOURCES
    sources/insert.cpp
    sources/merge.cpp
    sources/piramyd.cpp
    sources/quick.cpp)

add_library(lib SHARED ${SOURCES} )
target_include_directories(lib PUBLIC ${CMAKE_CURRENT_SOURCE_DIR}/include/)
